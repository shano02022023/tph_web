---

<div>
  <div
    class="flex flex-col gap-2 p-10 w-full h-auto bg-blue-700 justify-center items-center px-24"
  >
    <div class="flex flex-row h-auto">
      <div class="flex flex-col gap-5">
        <Image alt="footer logo" src={FooterLogo} width={75} height={75} />
        {
          details.map((d) => {
            return (
              <div class="flex flex-row gap-2">
                {d.logo == null ? <div>Logo Here</div> : <div>icon</div>}
                <div class="flex flex-wrap text-white font-bold w-35 text-sm">
                  {d.value}
                </div>
              </div>
            );
          })
        }
      </div>
      <div class="flex flex-wrap gap-5">
        {
          data.map((d) => {
            return (
              <div class="flex flex-col gap-2">
                <span class="text-lg font-bold text-white">{d.title}</span>
                <ul>
                  {d.items.map((item) => {
                    return <li class="text-sm text-white">{item}</li>;
                  })}
                </ul>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
  <div
    class="flex flex-row gap-2 p-10 w-full h-auto bg-blue-900 justify-between items-between px-32"
  >
    <div class="flex flex-row gap-10">
