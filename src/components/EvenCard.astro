---
import { Image } from "astro:assets";
import PrimaryButton from "./PrimaryButton.astro";
import { Icon } from "astro-icon/components";

const { name, description, img, url="#" } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center w-full lg:px-24 lg:py-6 p-6"
>
  <div class="items-center justify-center grid grid-cols-1 md:grid-cols-2">
    <div
      class="flex flex-col items-center justify-center px-8 text-center md:text-left lg:hidden sm:flex md:hidden"
    >
      <img
        src={img}
        alt={img}
        class="lg:max-w-md lg:max-h-[400px] w-auto shadow-bottom-right hover:scale-105 transition-all duration-300 ease-in-out"
      />
    </div>
    <div class="lg:p-18 p-6 bg-white opacity-90">
      <div class="mb-4">
        <h2 class="text-3xl md:text-5xl font-bold">
          <span class="text-dark dark:text-gray-900">{name}</span>
        </h2>
        <p class="text-lg md:text-xl mt-4 max-w-2xl dark:text-gray-900">
          {description}
        </p>
      </div>
      <div class="flex flex-row gap-2">
        <PrimaryButton isOutline={true}
          ><a href={url}>View More</a></PrimaryButton
        >
      </div>
    </div>
    <div
      class="flex flex-col items-center justify-center px-8 text-center md:text-left hidden lg:flex sm:hidden md:flex"
    >
      <img
        src={img}
        alt={img}
        class="lg:max-w-md lg:max-h-[400px] w-auto shadow-bottom-left hover:scale-105 transition-all duration-300 ease-in-out"
      />
    </div>
  </div>
</div>